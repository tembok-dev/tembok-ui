---
import { variants, cx } from "./utils/variants";

type Intent =
  | "primary"
  | "secondary"
  | "neutral"
  | "ghost"
  | "success"
  | "warning"
  | "info"
  | "danger";
type Size = "sm" | "md" | "lg";
type Tone = "default" | "ink" | "red" | "lime" | "cyan";

const base = "tmbk-theme tmbk-btn";

const cls = variants(
  base,
  {
    intent: {
      primary: "",
      secondary: "",
      neutral: "",
      ghost: "",
      success: "",
      warning: "",
      info: "",
      danger: "",
    },
    size: {
      sm: "tmbk-btn--sm",
      md: "tmbk-btn--md",
      lg: "tmbk-btn--lg",
    },
    tone: {
      default: "",
      ink: "",
      red: "",
      lime: "",
      cyan: "",
    },
    disabled: {
      true: "",
      false: "",
    },
  },
  { intent: "primary", size: "sm", tone: "default", disabled: "false" }
);

const {
  as = "button",
  intent = "primary",
  size = "sm",
  tone = "default",
  disabled = false,
  class: className,
  ...attrs
} = Astro.props;

const Tag = as;
const classNames = cx(
  cls({ intent, size, tone, disabled: String(disabled) }),
  className
);
const dataAttrs = { "data-intent": intent, "data-tone": tone };
const isButton = Tag === "button";
---

<Tag
  class={classNames}
  {...dataAttrs}
  disabled={isButton ? !!disabled : undefined}
  aria-disabled={!isButton && disabled ? "true" : undefined}
  {...attrs}
>
  <slot />
</Tag>
